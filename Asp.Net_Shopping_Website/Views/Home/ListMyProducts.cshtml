
@model MvcGenelTekrar4.Models.ViewModels.ListProductsViewModel

@{
    ViewBag.Title = "ListMyProducts";
}

<h2>ListMyProducts</h2>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>@Html.ActionLink("Go Cart", "ListMyCarts", null, new { @class = "btn btn-default" })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@(product.CategoryId == null ? "No Category" : product.Category.CategoryName)</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td>@Html.ActionLink("Add Cart", "AddMyCart", new { id = product.ProductID }, new { @class = "btn btn-primary btn-xs" })</td>
            </tr>
        }
    </tbody>
</table>

